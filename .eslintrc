{
    "env": {
        "browser": true,
        "es6": true,
        "prototypejs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "globals": {
        "browser": true,
        "editor": true,
        "PhenoTips": true,
        "Raphael": true,
        "XWiki": true
    },
    "rules": {
        "brace-style": ["warn", "1tbs"],
        "curly": ["warn"],
        "indent": [ "warn", 2 ],
        "linebreak-style": [ "warn", "unix" ],
        "quotes": [ "warn", "single" ],
        "semi": [ "warn", "always" ],
        "no-console": "off",
        "no-constant-condition": "warn",
        "no-empty": "warn",
        "no-inner-declarations": "warn",
        "no-redeclare": "warn",
        "no-unused-vars": [ "warn", { "args": "none" } ],
        "no-useless-escape": "warn"
    }
}
